@model IEnumerable<EasyRent.Models.Product>
@{
    ViewData["Title"] = "Browse Page";
}
@section UserNav{}
@section NormalNav{}

<div class="text-center">
    <h1 class="display-4">Browse</h1>
</div>

@foreach (var item in Model) {

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.IsRented)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.IsRented)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.ReturnDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.ReturnDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(modelItem => item.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => item.Notes)
        </dd>
    </dl>
    <a type="button" class="btn btn-primary" asp-controller="cart" asp-action="buy" asp-route-id="@item.Id">Rent</a>
}


